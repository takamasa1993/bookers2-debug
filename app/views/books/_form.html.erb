<%= form_with model: book do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <%= f.label :opinion %>
    <%= f.text_area :body %>
  </div>
  <div class="form-group">
    <% if action_name == "index" || action_name == "show" %>
      <%= f.submit "Create Book", class: 'btn btn-success' %>
    <% elsif action_name == "edit" %>
      <%= f.submit "Update Book", class: 'btn btn-success' %>
    <% end %>
  </div>
<% end %>
